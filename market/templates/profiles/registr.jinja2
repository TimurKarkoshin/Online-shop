{% extends "general/base.jinja2" %}
{% load static %}

<head>
    <title>
        {% block title %}
            Страница регистрации пользователя
        {% endblock %}
    </title>
</head>

<body class="Site">
    <!--if lt IE 8
  p.error-browser
      | Ваш браузер&nbsp;
      em устарел!&nbsp;
      a(href="http://browsehappy.com/") Выберите новую версию
          +s
          | браузера здесь&nbsp;
      | для правильного отображения сайта.
  -->
    {% block body %}
        <main class="Middle">
            {% block content %}
                <div class="ControlPanel">
                    <div class="wrap">
                        <div class="row ControlPanel-row">
                            <div class="row-block">
                                <div class="row ControlPanel-rowSplit">
                                    <div class="row-block hide_700">
                                        <ul class="menu menu_img menu_smallImg ControlPanel-menu">
                                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialHeader/tw.svg' %}" alt="tw.svg" /></a>
                                            </li>
                                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialHeader/in.svg' %}" alt="in.svg" /></a>
                                            </li>
                                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialHeader/pt.svg' %}" alt="pt.svg" /></a>
                                            </li>
                                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialHeader/mail.svg' %}" alt="mail.svg" /></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <nav class="row-block">
                                <div class="row ControlPanel-rowSplit">
                                    <div class="row-block"><a class="ControlPanel-title" href="">Вход</a>
                                        <a class="ControlPanel-title" href="">Регистрация</a>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <!--+div.menuModal#navigate
              //    +menu([
              //        ['Главная','index.html'],
              //        ['Портфолио','index.html'],
              //        ['Мои проекты','index.html'],
              //        ['Контакты','index.html']
              //    ], page === 'article'? 'Портфолио': 'Главная')._main

              block
              -->
                </div>

                <div class="wrap">
                    <div class="row Header-rowMain">
                        <div class="row-block Header-logo"><a class="logo" href="index.html"><img class="logo-image" src="{% static 'assets/img/logo.png' %}" alt="logo.png" /></a>
                        </div>
                    </div>

                    <div class="wrapper">
                        <div class="header">
                            <h3 class="sign-in">Регистрация</h3>

                        </div>
                        <div class="clear"></div>

                        <form action="#" method="post">
                            {% csrf_token %}

                            <div>
                                <input class="user-input" type="text" name="username" id="name" placeholder="Имя" />
                                {{ form.username.errors }}
                            </div>
                            <div>
                                <input class="user-input" type="email" name="email" id="name" placeholder="E-mail" />
                                {{ form.email.errors }}
                            </div>
                            <div>

                                <input type="password" name="password1" id="name" placeholder="Пароль" />
                                {{ form.password1.errors }}
                            </div>
                            <div>

                                <input type="password" name="password2" id="name" placeholder="Повторите пароль" />
                                {{ form.password1.errors }}
                            </div>
                            <div class="user-input">
                                {{ form.group }}
                                {{ form.group.errors }}
                            </div>

                            <input type="submit" value="Зарегистрироваться" />
                            <a class="registr" href="{% url 'profiles:login' %}">
                                Вход
                            </a>
                            <div class="clear"></div>
                        </form>
                    </div>

                </div>
            {% endblock %}

        </main>

        <footer class="Footer">
            <div class="wrap">
                <div class="row Footer-main">
                    <div class="row-block"><a class="logo Footer-logo" href="index.html"><img class="logo-image" src="{% static 'assets/img/logo_footer.png' %}" alt="logo_footer.png" /></a>
                    </div>
                    <div class="row-block">
                        <strong class="Footer-title">Навигация
                        </strong>
                        <ul class="menu menu_vt Footer-menu">
                            <li class="menu-item"><a class="menu-link" href="index.html">Главная</a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="catalog.html">Каталог</a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="comparison.html">Сравнение</a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="account.html">Профиль</a>
                            </li>

                        </ul>
                    </div>
                    <div class="row-block">
                        <strong class="Footer-title">Контакты
                        </strong>
                        <p>Phone: 8.800.200.600<br>Email: xxx@meg.com<br>
                        </p>
                        <ul class="menu menu_img menu_smallImg Footer-menuSoc">
                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialFooter/fb.svg' %}" alt="fb.svg" /></a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialFooter/tw.svg' %}" alt="tw.svg" /></a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialFooter/in.svg' %}" alt="in.svg" /></a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialFooter/pt.svg' %}" alt="pt.svg" /></a>
                            </li>
                            <li class="menu-item"><a class="menu-link" href="#"><img src="{% static 'assets/img/icons/socialFooter/mail.svg' %}" alt="mail.svg" /></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

        <!--+Middle-->
        <!--    +div.-top-->
        <!--        +breadcrumbs('Главная','Портфолио')-->
        <!--    +Article('portfolio')-->
        <!---->
    {% endblock %}
</body>

</html>